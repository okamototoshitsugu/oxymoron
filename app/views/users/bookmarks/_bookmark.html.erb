<% if task.bookmark_by?(current_user) %>
<%= link_to users_task_bookmarks_path(task, redirect_id: 0), method: :delete, remote: true do %>
<div id="bookmark-button-2">
<i class="fas fa-bookmark fa-2x"　id="task_<%= task.id %>"></i>
</div>
<% end %>
<% else %>
<%= link_to users_task_bookmarks_path(task, redirect_id: 0), method: :post, remote: true do %>
<div id="bookmark-button">
<i class="far fa-bookmark fa-2x"　id="task_<%= task.id %>"></i>
</div>
<% end %>
<% end %>