<div class="admin_top">
	<h1>会員一覧画面</h1>
	<table align="center">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>E-mail</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.email  %></td>
				<!-- if文を使ってdeleted_atがあった場合の表示したい内容　無い時の表示したい内容を書く -->
				<% if user.deleted_at.present? %>
				<td>退会済</td>
				<% else %>
				<td>有効</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>